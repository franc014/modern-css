<style>
  :root {
    --step--2: clamp(0.69rem, calc(0.64rem + 0.25vw), 0.88rem);
    --step--1: clamp(0.83rem, calc(0.76rem + 0.36vw), 1.1rem);
    --step-0: clamp(1rem, calc(0.9rem + 0.51vw), 1.38rem);
    --step-1: clamp(1.2rem, calc(1.06rem + 0.7vw), 1.72rem);
    --step-2: clamp(1.44rem, calc(1.25rem + 0.96vw), 2.15rem);
    --step-3: clamp(1.73rem, calc(1.47rem + 1.3vw), 2.69rem);
    --step-4: clamp(2.07rem, calc(1.73rem + 1.74vw), 3.36rem);
    --step-5: clamp(2.49rem, calc(2.02rem + 2.32vw), 4.2rem);
  }

  /*  h1 a,
  h1 p {
    color: lightgreen;
  } */

  h1 :is(a, p) {
    color: lightgreen;
    max-width: 15ch;
  }

  .card:has(p.dark-background) {
    background-color: darkmagenta;
    color: white;
    padding: 2rem;
  }

  .card:has(p.dark-background) p.title {
    width: fit-content;
    background-color: lightcoral;
    padding: 1rem;
    transition: transform 1s ease-in-out, opacity 0.5s linear,
      border-radius 1s ease;
  }

  .card:has(p.dark-background) p.title:hover {
    transform: scale(0.5);
    opacity: 0.6;
    border-radius: 24rem;
  }

  main {
    width: min(80%, 1000px);
    margin-inline: auto;
    font-size: var(--step-0);
  }

  /* p.dark-background {
    background-color: green;
    color: white;
    padding: max(5vh, 1rem);
    font-size: var(--step-1);
  } */

  h1 {
    /* font-size: clamp(3rem, 10vw + 1rem, 5rem); */
    font-size: var(--step-4);
    font-weight: 800;
    margin: 0;
    background-color: blueviolet;
    padding: 2rem;
    color: white;
    /* width: fit-content; */
    /* width: min-content; */
    width: max-content;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .instructions {
    line-height: 1.6;
    margin: 1rem 0;
    border: 1px solid rgba(var(--accent), 25%);
    background-color: white;
    padding: 1rem;
    border-radius: 0.4rem;
  }
  .instructions code {
    font-size: 0.875em;
    font-weight: bold;
    background: rgba(var(--accent), 12%);
    color: rgb(var(--accent));
    border-radius: 4px;
    padding: 0.3em 0.45em;
  }
  .instructions strong {
    color: rgb(var(--accent));
  }
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 1rem;
    padding: 0;
  }
</style>
